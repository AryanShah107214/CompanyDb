@page 
@model CompanyDb.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.First_Middle_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.First_Middle_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.HireDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.HireDate)
        </dd>
        
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Sold Item Name</th>
                    <th>Cost</th>
                </tr>
                @foreach (var item in Model.Employee.Stores)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sale.ItemName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemCost)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee.EmployeeID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
